@section scripts
{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/api/store",
                data: "{}",
                success: function (data) {
                    var s = '<option value="-1">Please Select a Store</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].ID + '">' + data[i].Name + '</option>';
                    }
                    $("#StoresDropdown").html(s);
                }
            });
            $.ajax({
                type: "GET",
                url: "/api/item",
                data: "{}",
                success: function (data) {
                    var s = '<option value="-1">Please Select an Item</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].ID + '">' + data[i].Name + '</option>';
                    }
                    $("#ItemsDropdown").html(s);
                }
            });

            $.ajax({
                type: "GET",
                url: "/api/unit",
                data: "{}",
                success: function (data) {
                    var s = '<option value="-1">Please Select an Unit</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].ID + '">' + data[i].Type + '</option>';
                    }
                    $("#UnitsDropdown").html(s);
                }
            });
        });
    </script>
}